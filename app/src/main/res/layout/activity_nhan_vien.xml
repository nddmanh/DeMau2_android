<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NhanVienActivity">

    <TextView
        android:id="@+id/tv_nhanvien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Nhan vien"/>

    <EditText
        android:id="@+id/ten_nhan_vien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nhanvien"
        android:hint="ten nhan vien"
        />

    <EditText
        android:id="@+id/nam_sinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ten_nhan_vien"
        android:hint="nam sinh nhan vien"
        />

    <EditText
        android:id="@+id/que_quan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nam_sinh"
        android:hint="que quan"
        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/que_quan"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/btn_addnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner1"
        android:text="Add"/>

    <Button
        android:id="@+id/btn_viewnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_addnv"
        android:text="View"/>

</RelativeLayout>